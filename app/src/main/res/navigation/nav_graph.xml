<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/accountFragment">

    <fragment
        android:id="@+id/accountFragment"
        android:name="br.com.dio.cryptomanager.ui.AccountFragment"
        android:label="@string/AccountFragment">
        <action
            android:id="@+id/action_accountFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_accountFragment_to_accountDetailFragment"
            app:destination="@id/accountDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountDetailFragment"
        android:name="br.com.dio.cryptomanager.ui.AccountDetailFragment"
        android:label="@string/AccountDetailFragment">

    </fragment>
</navigation>